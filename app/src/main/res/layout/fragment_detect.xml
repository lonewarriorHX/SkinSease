<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_main"
    tools:context=".ui.home.ui.detect.DetectFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/profilePicture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dp"
        app:layout_constraintVertical_bias="0.2"
        android:src="@drawable/character"
        app:civ_border_color="#ffffff"
        app:civ_border_width="3dp" />

    <ImageView
        android:id="@+id/search1"
        android:layout_width="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/profilePicture"
        android:src="@drawable/ic_baseline_search_24"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintHorizontal_bias="0.6"
        android:layout_height="50dp"
        />

    <TextView
        android:id="@+id/tes1"
        android:textColor="@color/purple_700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profilePicture"
        app:layout_constraintVertical_bias="0.1"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Apakah Kulit \n  Saya Sehat?"/>

    <Button
        android:id="@+id/cobaTes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_detection"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tes1" />

    <Button
        android:id="@+id/btn_cam_detect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Live_Detection"
        app:layout_constraintEnd_toEndOf="@+id/cobaTes"
        app:layout_constraintStart_toStartOf="@+id/cobaTes"
        app:layout_constraintTop_toBottomOf="@+id/cobaTes" />

</androidx.constraintlayout.widget.ConstraintLayout>