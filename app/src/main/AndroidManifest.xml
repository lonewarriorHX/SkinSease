<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yourskinhealthcare">

    <uses-feature android:name="android.hardware.camera.any" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.YourSkinHealthcare">
        <activity android:name=".detail.DetailActivity1"></activity>
        <activity
            android:name=".ui.home.MainActivity"
            android:label="@string/title_activity_main"></activity>
        <activity android:name=".main.SecondActivity"></activity>
        <activity
            android:name=".main.NewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity android:name=".main.CameraActivity"></activity>
        <activity
            android:name=".ui.home.HomeActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity
            android:name=".authentication.SignUpActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity
            android:name=".authentication.LoginActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity
            android:name=".authentication.SplashScreeen"
            android:label="@string/app_name"
            android:theme="@style/Theme.YourSkinHealthcare.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".authentication.profile"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
    </application>

</manifest>