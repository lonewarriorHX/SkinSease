<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back_main"
    tools:context=".ui.home.ui.home.HomeFragment">

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:text="Ada Apa Saja \njenis-jenis penyakit kulit?"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30sp"
        app:cardBackgroundColor="@color/brownbg"
        app:cardElevation="@dimen/cardview_compat_inset_shadow"
        android:padding="10sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#D2000000"
            android:paddingStart="20sp"
            android:paddingEnd="130sp"
            android:paddingVertical="10sp"
            android:text="SkinSease - Types of Diesease"
            android:paddingRight="180sp"
            android:paddingLeft="20sp" />
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/rImage1"
                        android:layout_width="330dp"
                        android:layout_height="180dp"
                        android:src="@drawable/dermato"
                        android:scaleType="fitXY" />
                    <TextView
                        android:id="@+id/text1"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:text="Dermatofibroma"/>
                    <TextView
                        android:paddingVertical="5dp"
                        android:paddingLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dermatofibroma merupakan suatu pertumbuhan\nKulit kecil non kanker"/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="185dp"
                    app:cardCornerRadius="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: 5 Juni 2020"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="10dp"
                        android:textColor="#000000"/>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="330dp"
                        android:layout_height="180dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/melanoma"
                        />
                    <TextView
                        android:id="@+id/text2"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:text="Melanoma"/>
                    <TextView
                        android:paddingVertical="5dp"
                        android:paddingLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Melanoma adalah bentuk serius dari kanker kulit \nyang dimulai pada sel melanocytes."/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="185dp"
                    app:cardCornerRadius="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: 5 Juni 2020"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="10dp"
                        android:textColor="#000000"/>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="330dp"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/squamous"
                        />
                    <TextView
                        android:id="@+id/text3"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:text="Squamous Cell Carcinoma"/>
                    <TextView
                        android:paddingVertical="5dp"
                        android:paddingLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SCC ditandai dengan pertumbuhan \nsel squamous yang abnormal dan dipercepat."/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="185dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginStart="185dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: 5 Juni 2020"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="10dp"
                        android:textColor="#000000"/>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="330dp"
                        android:layout_height="180dp"
                        android:src="@drawable/download"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:id="@+id/text4"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:text="Seborrheic Keratosis"/>
                    <TextView
                        android:paddingVertical="5dp"
                        android:paddingLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="sebuah jenis tumor epidermis \nbanyak ditemukan di seluruh individu paruh baya. "/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="185dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginStart="185dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: 10 Juni 2020"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="10dp"
                        android:textColor="#000000"/>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="330dp"
                        android:layout_height="180dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/images"
                        />
                    <TextView
                        android:id="@+id/text5"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:text="Pigmented Benign Keratosis"/>
                    <TextView
                        android:paddingVertical="5dp"
                        android:paddingLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adalah sebuah varian yang tidak biasa \ndari keratosis yang dapat meniru lesi melanositik."/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="185dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginStart="185dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: 5 Juni 2020"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="10dp"
                        android:textColor="#000000"/>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>